{
  "name": "tflori/riki-skeleton",
  "description": "Skeleton application using riki framework",
  "type": "project",
  "license": "MIT",
  "bin": ["skeleton/riki-skeleton", "bin/cli"],
  "require": {
    "php": "^7.1",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "mockery/mockery": "^1.1",
    "squizlabs/php_codesniffer": "^3.3",
    "tflori/riki-framework": "dev-master",

    "filp/whoops": "^2.2",
    "monolog/monolog": "^1.9",

    "ulrichsg/getopt-php": "^3.2",
    "tflori/hugga": "dev-master",

    "tflori/tal": "dev-master",
    "nikic/fast-route": "^1.3.0",
    "psr/http-server-handler": "^1.0.0",
    "psr/http-server-middleware": "^1.0.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 app && phpcs --standard=PSR2 --ignore=example tests"
  }
}
