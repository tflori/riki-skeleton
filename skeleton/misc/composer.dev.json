{
  "name": "tflori/riki-skeleton",
  "description": "Skeleton application using riki framework",
  "type": "project",
  "license": "MIT",
  "bin": ["skeleton/riki-skeleton", "bin/cli"],
  "require": {
    "php": "^7.1",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "require-dev": {
    "filp/whoops": "^2.2",
    "phpunit/phpunit": "^7.2",
    "mockery/mockery": "^1.1",
    "monolog/monolog": "^1.9",
    "tflori/riki-framework": "1.0.0-alpha.1",
    "tflori/dependency-injector": "^2.0",
    "tflori/hugga": "dev-master",
    "tflori/http": "^1.8",
    "ulrichsg/getopt-php": "^3.2",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests"
    }
  },
  "scripts": {
    "code-style": "phpcs --standard=PSR2 app && phpcs --standard=PSR2 --ignore=example tests"
  }
}
